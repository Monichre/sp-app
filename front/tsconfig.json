{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "exclude": [
    "src/**/*.stories.tsx"
  ],
  "include": [
    "src",
    "e2e"
  ]
}